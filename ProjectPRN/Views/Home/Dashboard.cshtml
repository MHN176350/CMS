@using ProjectPRN.Models
@model List<Enrollment>
<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">

    <title>Villa Agency - Property Listing by TemplateMo</title>

    <!-- Bootstrap core CSS -->
    <link href="/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- Additional CSS Files -->
    <link rel="stylesheet" href="/assets/css/fontawesome.css">
    <link rel="stylesheet" href="/assets/css/templatemo-villa-agency.css">
    <link rel="stylesheet" href="/assets/css/owl.css">
    <link rel="stylesheet" href="/assets/css/animate.css">
    <link rel="stylesheet" href="https://unpkg.com/swiper@7/swiper-bundle.min.css" />
    
    <!--

    TemplateMo 591 villa agency

    https://templatemo.com/tm-591-villa-agency

    -->
</head>

<body>

    <!-- ***** Preloader Start ***** -->
    <div id="js-preloader" class="js-preloader">
        <div class="preloader-inner">
            <span class="dot"></span>
            <div class="dots">
                <span></span>
                <span></span>
                <span></span>
            </div>
        </div>
    </div>
    <!-- ***** Preloader End ***** -->

    <div class="sub-header">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-md-8">
                    <ul class="info">
                        <li><img src="~/assets/images/2020-FPTU-Eng.png"></img></li>

                    </ul>
                </div>
                <div class="col-lg-4 col-md-4">
                </div>
            </div>
        </div>
    </div>

    <!-- ***** Header Area Start ***** -->
    <header class="header-area header-sticky">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <nav class="main-nav">
                        <!-- ***** Logo Start ***** -->
                        <a href="index.html" class="logo">
                            <h1>CMS</h1>
                        </a>
                        <!-- ***** Logo End ***** -->
                        <!-- ***** Menu Start ***** -->
                        <ul class="nav">
                            <li><a asp-action="Index" asp-controller="Home" >Home</a></li>
                            <li><a asp-action="Subjects" asp-controller="Home">Courses</a></li>


                            @if (@Model == null)
                            {
                                <li><a asp-action="login"><i class="fa fa-user"></i> Login</a></li>
                            }
                            else

                            {

                                <li><a asp-action="MyCourse" asp-controller="Home">My Course</a></li>
                                <li><a asp-action="Dashboard" asp-controller="Home">@ViewBag.name</a></li>
                            }
                        </ul>
                        <a class='menu-trigger'>
                            <span>Menu</span>
                        </a>
                        <!-- ***** Menu End ***** -->
                    </nav>
                </div>
            </div>
        </div>
    </header>
    <!-- ***** Header Area End ***** -->

    <div class="page-heading header-text">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <span class="breadcrumb"><a href="#">Home</a> / Properties</span>
                    <h3>Properties</h3>
                </div>
            </div>
        </div>
    </div>

    <div class="section properties">
        <div class="container">

            <div class="row properties-box">
                @if (ViewBag.ept != 0 || ViewBag.ept == null)
                {
                    @foreach (Enrollment c in Model)
                    {
                        <div class="col-lg-4 col-md-6 align-self-center mb-30 properties-items col-md-6 adv">
                            <div class="item">
                                <a asp-action="Detail" asp-controller="Home" asp-route-id="@c.CIdNavigation.Id"><img src="/assets/images/property-01.jpg" alt=""></a>
                                <span class="category">@c.CIdNavigation.Lecture.Name</span>
                                <h6>@c.CIdNavigation.Code</h6>
                                <h4><a asp-action="Detail" asp-controller="Home" asp-route-id="@c.CIdNavigation.Id">@c.CIdNavigation.Name</a></h4>
                                <ul>
                                    @if (c.Ovd == 0)
                                    {
                                        <li>Status <span style="color:blue">Ongoing</span></li>
                                    }
                                    else{

                                        <li > Status <span style="color:red"> Overdue </span></li>
                                        }
                                    @{
                                        Progress p = c.Progresses.FirstOrDefault(p => p.EId == c.Id);
                                    }
                                    @if (p!=null)
                                    {
                                        int mark = 0;
                                        if (p.As1 != null)
                                        {
                                            mark += 3;
                                        }
                                        if (p.As2 != null)
                                        {
                                            mark += 3;
                                        }
                                        if (p.As3 != null)
                                        {
                                            mark += 3;
                                        }
                                        <li> Mark: <span> @mark </span></li>
                                    }
                                    else{
                                        <li> Mark: <span> 0 </span></li>
                                        
                                        }

                                </ul>

                                <div class="main-button">
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="col-lg-4 col-md-6 align-self-center mb-30 properties-items col-md-6 adv">
                        <div class="item">
                            <div>Join a Course to continue</div>
                            
                        </div>
                    </div>
                }
            </div>
            <div><a asp-action="Logout" asp-controller="Home">Log Out</a></div>
        </div>
    </div>

    <footer>
        <div class="container">
            <div class="col-lg-12">
                <p>
                    Copyright © 2048 Villa Agency Co., Ltd. All rights reserved.

                    Design: <a rel="nofollow" href="https://templatemo.com" target="_blank">TemplateMo</a> Distribution: <a href="https://themewagon.com">ThemeWagon</a>
                </p>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <!-- Bootstrap core JavaScript -->
    <script src="/vendor/jquery/jquery.min.js"></script>
    <script src="/vendor/bootstrap/js/bootstrap.min.js"></script>
    <script src="/assets/js/isotope.min.js"></script>
    <script src="/assets/js/owl-carousel.js"></script>
    <script src="/assets/js/counter.js"></script>
    <script src="/assets/js/custom.js"></script>

</body>
</html>